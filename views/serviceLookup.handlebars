<h2>Service Search</h2>

<form action="" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name">
    <input type="submit" name="Find by Name" value="Find by Name">
</form>

<h2>Services: </h2>
<table id="servicesTable">
    <thead>
        <th>Service ID</th>
        <th>Name</th>
        <th>Expected_turnaround</th>
        <th>Price</th>
        <th></th>
    </thead>
    <tbody>
        {{#each services}}
        <tr>
          <td>{{this.service_id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.expected_turnaround}}</td>
          <td>{{this.price}}</td>
          <td><button onclick="location.href='/serviceUpdate?service_id={{this.service_id}}'">Update</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>