<h1>Complete your order!</h1>
</br>
<h2>Payment and Shipping</h2>
</br>

<form method="POST">
  <span>Credit/Debit Card Number</span>
  </br>
  <input type="number" name="ccNum" id="ccNum">
  </br>
  </br>

  <span>Card Expiration Date</span>
  </br>
  <input type="date" name="ccDate" id="ccDate">
  </br>
  </br>

  <span>Credit/Debit Card Security Code</span>
  </br>
  <input type="number" name="ccSec" id="ccSec">
  </br>
  </br>

  <span>Ship the order?</span>
  </br>
  <input type="radio" name="shipOrder" id="shipYes" value="shipYes">
  <label for "shipYes">Yes</label></br>
  <input type="radio" name="shipOrder" id="shipNo" value="shipNo">
  <label for "shipNo">No</label></br>
  </br>
  </br>
  
  <span>Expedite?</span>
  </br>
  <input type="radio" name="expOrder" id="expYes" value="expYes">
  <label for "expYes">Yes</label></br>
  <input type="radio" name="expOrder" id="expNo" value="expYes">
  <label for "expNo">No</label></br>
  </br>
  </br>
  
  <input type="submit" name="submitOrder" value="Submit Order"
</form>
