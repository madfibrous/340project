<h4>Filter by</h4>
<form method="GET">
  Make:
  <select name="make" id="makeFilter">
    <option value="Commencal">Commencal</option>
    <option value="Dartmoor">Dartmoor</option>
    <option value="Kona">Kona</option>
    <option value="Schwinn">Schwinn</option>
    <option value="Trek">Trek</option>
    <option value="Zoom">Zoom</option>
  </select>
  Size:
  <select name="size" id="sizeFilter">
    <option value="XL">Extra Large</option>
    <option value="L">Large</option>
    <option value="M">Medium</option>
    <option value="S">Small</option>
  </select>
  Color:
  <select name="color" id="colorFilter">
    <option value="Black">Black</option>
    <option value="Blue">Blue</option>
    <option value="Green">Green</option>
    <option value="Grey">Grey</option>
    <option value="Purple">Purple</option>
    <option value="Red">Red</option>
    <option value="Silver">Silver</option>
    <option value="White">White</option>
    <option value="Yellow">Yellow</option>
  </select>
  Type:
  <select name="type" id="typeFilter">
    <option value="Road">Road</option>
    <option value="Mountain">Mountain</option>
  </select>
  <input type="submit" name="searchBicycles" value="Search">
</form>


<div class='row'>
  {{#if bikes}}
      {{#each bikes}}
      <div class='col-4'>
          <img id="bikeImage" onclick="loadBikeItem({{this.catalog_id}})"
          src="/pictures/productpage/bikeIcon.png">
          </br>
          <span>{{this.make}}</span>
          <span>{{this.model}}&emsp;</span>
          </br>
          <span>Size: {{this.size}}</span>
      </div>
      {{/each}}
  {{/if}}
</div>

