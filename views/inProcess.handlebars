<h2>In process repairs: </h2>
<table id="inProcessRepairsTable">
    <thead>
        <th>Repair ID</th>
        <th>Service ID</th>
        <th>Service Name</th>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Request Date</th>
        <th></th>
    </thead>
    <tbody>
        {{#each repairs}}
        <tr>
          <td>{{this.repair_id}}</td>
          <td>{{this.service_id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.cust_id}}</td>
          <td>{{this.fname}}</td>
          <td>{{this.lname}}</td>
          <td>{{this.request_date}}</td>
          <td><button>Complete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

