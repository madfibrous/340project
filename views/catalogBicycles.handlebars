<h4>Filter by</h4>
<form action="">
  make:
  <select name="make" id="makeFilter">
    <option value="Schwinn">Schwinn</option>
    <option value="Raleigh">Raleigh</option>
  </select>
  model:
  <select name="model" id="modelFilter">
    <option value="Road Bike">Road Bike</option>
    <option value="Mountain Bike">Mountain Bike</option>
  </select>
  size:
  <select name="size" id="sizeFilter">
    <option value="L">Large</option>
    <option value="M">Medium</option>
  </select>
  color:
  <select name="size" id="colorFilter">
    <option value="Red">Red</option>
    <option value="White">White</option>
  </select>
  type:
  <select name="type" id="typeFilter">
    <option value="Road">Road</option>
    <option value="Mountain">Mountain</option>
  </select>
  <input type="submit" name='searchBicycles' value="Search">
</form>


<div class='row'>
  {{#if bikes}}
      {{#each bikes}}
      <div class='col-4'>
          <img id="bikeImage" src="/pictures/productpage/bikeIcon.png"
          onclick="javascript:window.location='./bikeItem';">
          </br>
          <span>{{this.make}}</span>
          <span>{{this.model}}&emsp;</span>
          <span>${{this.price}}</span>
      </div>
      {{/each}}
  {{/if}}
</div>
